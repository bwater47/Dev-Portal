<!-- This is the sign up page. It contains a form that allows users to sign up. -->
<div>
    <h1>Sign Up</h1>
    <form action="/signup" method="post">
        <input type="text" name="username" placeholder="Username" value="{{users.username}}" required>
        <input type="password" name="password" placeholder="Password" value="{{users.password}}" required>
        <input type="submit" value="Sign Up">
    </form>
    <a href="/login">Log In</a>
</div>