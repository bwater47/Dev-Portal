<!-- This is the comments partial -->
<section>
  <h1>Add Comment</h1>
  <!-- Display all comments for each comment in the commentArray -->
  {{#each comments as |comment|}}
    <article>
      <p>{{comment.text}}</p>
      <p>Created by: {{users.username}}</p>
      <p>Created on: {{comment.date}}</p>
    </article>
  {{/each}}
</section>

<script src='../../public/js/comment.js'></script>