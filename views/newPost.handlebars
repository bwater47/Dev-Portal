<!-- Displays a new post form with title and post content input fields. -->
  <div class='container'>
        <h1>New Post</h1>
        <form id='newPostForm'>
          <div class="post-box">
          <div class='form-group post-section'>
            <label class='post-title' for='title'>Title:</label>
            <input type='text' id='post-title' name='title' class='form-control' />
          </div>
          <div class='form-group post-section'>
            <label class="post-title" for='post_content'>Post Content:</label>
            <textarea
              id='post-content'
              name='post_content'
              class='form-control'
            ></textarea>
          </div>
          </div>
          <button type='submit' class='btn btn-primary'>Submit</button>
        </form>
      </div>
    </div>
  </div>

<script src='/js/newPost.js'></script>