<!-- Displays the form for updating and deleting a post. -->
  <div class='container'>
    <div class='row'>
      <div class='col-md-12'>
        <h2>Edit Post</h2>
        <form id="edit-post-form" method="POST">
        <input type='hidden' id='post-id' value='{{id}}' />
        <label for='title'>Title:</label>
        <input type='text' id='title' name='title' value='{{title}}' />
        <label for='post_content'>Content:</label>
        <textarea
          id='post_content'
          name='post_content'
        >{{post_content}}</textarea>
        <button type='submit' class='btn btn-danger'>Update</button>
        <button type='submit' id='delete-post-btn' class='btn btn-primary'>Delete</button>
        </form>
      </div>
    </div>
  </div>

<script src='/js/editPost.js'></script>