<!-- Displays the form for updating and deleting a post. -->
<div class='container'>
      <h1>Edit Post</h1>
      <form id='edit-post-form' method='POST'>
        <div class="post-box">
        <div class='form-group post-section'>
          <label class="post-title" for='title'>Title:</label>
          <input
            type='text'
            id='title'
            name='title'
            class='form-control' value='{{post.title}}'/>
          <input type='hidden' id='post-id' value='{{id}}' />
        </div>
        <div class="form-group post-section">
        <label class="post-contents" for='post_content'>Post Content: </label>
        <textarea
          id='post_content'
          name='post_content'
          class="form-control"
        >{{post.post_content}}</textarea>
        </div>
        </div>
        <button type='submit' class='btn btn-danger'>Update</button>
        <button
          type='submit'
          id='delete-post-btn'
          class='btn btn-primary'
        >Delete</button>
      </form>
    </div>

<script src='/js/editPost.js'></script>