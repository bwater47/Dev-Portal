<!-- This is the form for editing a post. It has fields for the title and post content, and includes a hidden input for the post ID. -->
<!-- The form also includes a button to submit the changes, a link to delete the post, and a link to cancel the edit. -->
<section>
  <h1>Edit Post</h1>
  <form id='editPostForm'>
    <label for='title'>Title</label>
    <input type='text' id='title' name='title' value='{{post.title}}' />
    <label for='post_content'>Post Content</label>
    <textarea
      id='post_content'
      name='post_content'
    >{{post.post_content}}</textarea>
    <input type='hidden' name='post_id' value='{{post.id}}' />
    <button type='submit'>Edit Post</button>
  </form>
  <a href='/deletePost/{{post.id}}'>Delete Post</a>
  <a href='/'>Cancel</a>
</section>