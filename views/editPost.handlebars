<!-- editPost.handlebars -->
<form action="/editPost/{{id}}" method="POST">
  <div class='container'>
    <div class='row'>
      <div class='col-md-12'>
        <h2>Edit Post</h2>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{title}}">
        <label for="post_content">Content:</label>
        <textarea id="post_content" name="post_content">{{post_content}}</textarea>
        <button type="submit">Save Changes</button>
        <a href="/deletePost/{{id}}">Delete Post</a>
        <a href="/cancelEdit">Cancel</a>
      </div>
    </div>
  </div>
</form>

<script src='../public/js/editPost.js'></script>
