<!-- Displays the form for updating and deleting a post. -->
<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h1>Edit Post</h1>
      <form id='edit-post-form' method='POST'>
        <div class='form-group'>
          <label for='title'>Title:</label>
          <input
            type='text'
            id='title'
            name='title'
            class='form-control' value='{{post.title}}'/>
          <input type='hidden' id='post-id' value='{{id}}' />
        </div>
        <div class="form-group">
        <label for='post_content'>Post Content:</label>
        <textarea
          id='post_content'
          name='post_content'
          class="form-control"
        >{{post.post_content}}</textarea>
        </div>
        <button type='submit' class='btn btn-danger'>Update</button>
        <button
          type='submit'
          id='delete-post-btn'
          class='btn btn-primary'
        >Delete</button>
      </form>
    </div>
  </div>
</div>

<script src='/js/editPost.js'></script>